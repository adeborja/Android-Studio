<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85sp"
    android:orientation="horizontal">

    <!-- AÃ±adir un estilo que tenga la izquierda una imagen
     como retrato del personaje, en el centro el nombre del
     personaje y a la derecha el numero de imagenes  que
     se pueden ver de dicho personaje
     -->

    <ImageView
        android:id="@+id/imgRetrato"
        android:layout_marginStart="6sp"
        android:layout_marginTop="6sp"
        android:layout_marginBottom="6sp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/goku"
        android:layout_width="70sp"
        android:layout_height="70sp" />
    <!-- android:src="@mipmap/ic_launcher" -->

    <TextView
        android:id="@+id/txvAlias"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="6sp"
        android:text="Alias personaje"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="30"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="imagenes"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>