<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DetallesFragment">

    <ImageView
        android:id="@+id/imgRetratoDetalles"
        android:src="@mipmap/ic_launcher"
        android:layout_width="125sp"
        android:layout_height="125sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        />

    <TextView
        android:id="@+id/txvNombreDetalles"
        android:text="Nombre"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgRetratoDetalles"
        app:layout_constraintStart_toEndOf="@id/imgRetratoDetalles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="50sp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/txvAliasDetalles"
        android:text="Alias"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txvNombreDetalles"
        app:layout_constraintLeft_toRightOf="@id/imgRetratoDetalles"
        app:layout_constraintStart_toEndOf="@id/imgRetratoDetalles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/txvDescripcionDetalles"
        android:text="Descripcion"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgRetratoDetalles"
        app:layout_constraintBottom_toTopOf="@id/btnImagenes"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:scrollbars="vertical"
        />

    <Button
        android:id="@+id/btnImagenes"
        android:text="@string/ver_galeria"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</android.support.constraint.ConstraintLayout>